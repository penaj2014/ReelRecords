<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="322dp"
        android:layout_height="279dp"
        android:layout_below="@+id/list_item_thumbnail"
        android:layout_centerInParent="true"
        android:layout_marginStart="-295dp"
        android:layout_marginLeft="-295dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:text="temp" />

    <Button
        android:id="@+id/list_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="547dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:text="delete" />

    <WebView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="278dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>